{
  "name": "@ospm/eslint-plugin-threejs",
  "version": "0.0.1",
  "description": "ESLint plugin for Three.js best practices and performance optimizations",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "build": "run-s clean build:types build:esm build:cjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rimraf dist",
    "dev": "tsc -w -p tsconfig.esm.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "pretest": "npm run build",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "three",
    "three.js",
    "3d",
    "webgl",
    "performance",
    "best-practices"
  ],
  "author": {
    "name": "Alexey Lyakhov",
    "url": "https://github.com/JustFly1984",
    "email": "justfly1984@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ospm-app/eslint-plugin-threejs"
  },
  "bugs": {
    "url": "https://github.com/ospm-app/eslint-plugin-threejs/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "eslint": "^8.57.1 || ^9.33.0",
    "typescript": ">=5.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/estree": "^1.0.8",
    "@types/node": "^24.2.1",
    "@types/three": "^0.179.0",
    "@ospm/eslint-plugin-eslint-rule": "workspace:*",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-security": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@typescript-eslint/utils": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-plugin-es-x": "^9.0.0",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-oxlint": "^1.12.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
