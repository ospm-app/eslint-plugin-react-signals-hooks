{
	"name": "@ospm/eslint-plugin-valibot",
	"version": "1.0.0",
	"description": "ESLint plugin for Valibot with automatic schema conversion",
	"type": "module",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.mjs",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/index.mjs",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./rules": {
			"import": "./dist/esm/index.mjs",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist/",
		"README.md",
		"LICENSE",
		"docs"
	],
	"scripts": {
		"clean": "rm -rf dist/",
		"prebuild": "npm run clean",
		"deploy": "npm run build && npm publish --access public",
		"deploy:dry": "npm pack --dry-run",
		"build": "npm run build:cjs && npm run build:esm && npm run postbuild:esm && npm run build:types",
		"build:cjs": "tsc --project tsconfig.cjs.json",
		"build:esm": "tsc --project tsconfig.esm.json",
		"postbuild:esm": "node scripts/rename-to-mjs.mjs",
		"build:types": "tsc --project tsconfig.types.json",
		"build:watch": "npm run build:cjs -- --watch & npm run build:esm -- --watch & npm run build:types -- --watch",
		"tc": "tsc --project tsconfig.json --noEmit",
		"lint": "eslint . --ext .ts",
		"pretest": "npm run build",
		"test": "npm run test:zod && npm run test:joi && npm run test:arktype && npm run test:type",
		"test:zod": "eslint --config tests/zod-to-valibot/eslint.config.js tests/zod-to-valibot --ext .ts,.tsx",
		"test:joi": "eslint --config tests/joi-to-valibot/eslint.config.js tests/joi-to-valibot --ext .ts,.tsx",
		"test:arktype": "eslint --config tests/arktype-to-valibot/eslint.config.js tests/arktype-to-valibot --ext .ts,.tsx",
		"test:type": "eslint --config tests/type-to-valibot/eslint.config.js tests/type-to-valibot --ext .ts,.tsx"
	},
	"keywords": [
		"eslint",
		"eslintplugin",
		"valibot",
		"schema",
		"validation"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@babel/eslint-parser": "^7.28.0",
		"@babel/plugin-syntax-import-assertions": "^7.27.1",
		"@babel/preset-env": "7.28.0",
		"@biomejs/biome": "2.1.4",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/eslint": "^9.6.1",
		"@types/estree": "^1.0.8",
		"@types/node": "^24.2.1",
		"@typescript-eslint/types": "^8.39.1",
		"@typescript-eslint/eslint-plugin": "^8.39.1",
		"@typescript-eslint/parser": "^8.39.1",
		"@typescript-eslint/scope-manager": "^8.39.1",
		"@typescript-eslint/utils": "^8.39.1",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"eslint": "^9.33.0",
		"eslint-config-typescript": "^3.0.0",
		"eslint-plugin-es": "^4.1.0",
		"eslint-plugin-es-x": "^9.0.0",
		"eslint-plugin-eslint-plugin": "^7.0.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-json": "^4.0.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-n": "^17.21.3",
		"eslint-plugin-optimize-regex": "^1.2.1",
		"eslint-plugin-oxlint": "^1.11.2",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-security": "^3.0.1",
		"globals": "^16.3.0",
		"knip": "^5.62.0",
		"oxlint": "^1.11.2",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"valibot": "^1.0.0",
		"zod": "^4.0.17",
		"joi": "^18.0.0",
		"arktype": "^2.1.20",
		"eslint": "^8.57.1 || ^9.33.0",
		"typescript": "^5.9.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ospm-app/eslint-plugin-react-signals-hooks/tree/main/packages/eslint-plugin-valibot"
	},
	"bugs": {
		"url": "https://github.com/ospm-app/eslint-plugin-react-signals-hooks/issues"
	},
	"homepage": "https://github.com/ospm-app/eslint-plugin-react-signals-hooks/tree/main/packages/eslint-plugin-valibot#readme"
}
