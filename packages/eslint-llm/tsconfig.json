{
  "rootDir": "./",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.test.tsx"]
}
